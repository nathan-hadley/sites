---
interface Props {
  href: string;
  label: string;
}
const { href, label } = Astro.props as Props;
const isActive = Astro.url.pathname === href;
---

<a
  href={href}
  class={`inline-block text-center sm:text-left hover:opacity-80 ${isActive ? "font-semibold underline underline-offset-8" : ""}`}
  >{label}</a
>
