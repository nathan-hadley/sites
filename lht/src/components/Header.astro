---
import NavLink from "./NavLink.astro";
const isActive = (href: string) =>
  Astro.url.pathname === href || Astro.url.pathname.startsWith(href + '/');
---

<header
  class="flex w-full items-center justify-center px-5 py-6 sm:justify-between"
>
  <div class="hidden sm:block sm:text-2xl">
    <a href="/" class="hover:opacity-80">Liz Hadley Therapy</a>
  </div>
  <nav class="w-full sm:w-auto">
    <ul class="mx-auto flex max-w-xs items-center justify-center gap-6 text-xl sm:mx-0 sm:max-w-none sm:justify-start">
      <li class={`sm:hidden ${isActive('/') ? 'underline underline-offset-8' : ''}`}>
        <NavLink href="/" label="Home" />
      </li>
      <li class={isActive('/about') ? 'underline underline-offset-8' : ''}><NavLink href="/about" label="About" /></li>
      <li class={isActive('/focus-areas') ? 'underline underline-offset-8 text-center' : ''}><NavLink href="/focus-areas" label="Focus Areas" /></li>
      <li class={isActive('/faq') ? 'underline underline-offset-8' : ''}><NavLink href="/faq" label="FAQs" /></li>
      <li class={isActive('/resources') ? 'underline underline-offset-8' : ''}><NavLink href="/resources" label="Resources" /></li>
    </ul>
  </nav>
  <div class="hidden sm:block">
    <a
      href="/contact"
      class="inline-block rounded bg-[var(--color-font)] px-6 py-2 text-[var(--color-white)] hover:opacity-90"
      >Contact</a
    >
  </div>
</header>
