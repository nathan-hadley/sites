---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "Liz Hadley Therapy",
  description = "Psychotherapy for adults in Washington State",
  image,
} = Astro.props as Props;
const canonicalUrl = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).toString()
  : Astro.url.pathname;
const hideFooterCta = Astro.url.pathname === "/contact";
const imageUrl = (() => {
  const path = image || "/images/budding-plant-2.png";
  if (Astro.site) return new URL(path, Astro.site).toString();
  return path;
})();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title} â€” Liz Hadley Therapy</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:image:alt" content={title} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />

    <link
      href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400&family=Jost:wght@400;700;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="flex min-h-screen flex-col">
    <Header />
    <main
      class="prose prose-neutral prose-img:my-0 prose-img:rounded max-w-none px-2"
    >
      <slot />
    </main>
    {!hideFooterCta && <Footer />}
  </body>
</html>
